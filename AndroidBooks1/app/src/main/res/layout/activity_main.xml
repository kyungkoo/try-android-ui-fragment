<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >
  <!--
      List of Book Titles
  -->
  <fragment
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:name="io.github.kyungkoo.androidbooks1.BookListFragment"
      android:id="@+id/fragmentTitles"
      tools:layout="@layout/fragment_book_list"
      />

  <!--
      Description of selected book
  -->
  <fragment
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:name="io.github.kyungkoo.androidbooks1.BookDescFragment"
      android:id="@+id/fragmentDescription"
      tools:layout="@layout/fragment_book_desc"
      />

</LinearLayout>
